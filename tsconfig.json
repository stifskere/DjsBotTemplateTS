{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"strictPropertyInitialization": false,
		"baseUrl": ".",
		"paths": {
			"@modules/*": ["src/modules/*"],
			"@utils/*": ["src/modules/utils/*"],
			"@handlers/*": ["src/modules/handlers/*"]
		}
	}
}
